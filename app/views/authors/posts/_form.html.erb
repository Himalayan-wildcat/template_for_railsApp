<%= form_with(model: post, url: url, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-3">
      <div class="card" style="width: 15rem;">
           <h5 class="card-title"><%= yield(:page_title) %></h5>
       <ul class="list-group list-group-flush">
           <li class="list-group-item">
               <%= form.label "タイトル" %>
               <!-- can be done as <%= form.label :title %> -->
               <%= form.text_field :title, id: :post_title, class: 'form-control' %>
           </li>

           <li class="list-group-item">
               <%= form.label "URL"  %>
               <!-- can be done as <%= form.label :banner_image_url %> -->
               <%= form.text_field :banner_image_url, id: :post_banner_image_url, class: 'form-control'  %>
           </li>

           <li class="list-group-item">
               <%= form.label "副題" %>
               <!-- can be done as <%= form.label :description %> -->
               <%= form.text_area :description, id: :post_description, class: 'form-control' %>
           </li>

           <li class="list-group-item">
             <div class="actions">
               <%= form.submit "保存", class: 'btn btn-success btn-md btn-block' %>
             </div>
           </li>
       </ul>
      </div>

      <% if @post.persisted? %>
        <%= link_to 'Show', @post %> |
      <% end %>
        <%= link_to 'Back', authors_posts_path %>
    </div>

    <div class="col-md-9">
      <div class="field">
        <%= form.label "本文" %>
        <!-- <%= form.label :body %> -->
        <%= form.text_area :body, id: :post_body %>
      </div>
    </div>
  </div>
<% end %>
